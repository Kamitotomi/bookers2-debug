<div class="body">
	<div class="container">
		<p id="notice"></p>
		
		<div class="row">
		<%= flash[:notice] %>
			<div class="col-xs-3">
				<%= render 'users/profile', user: @user %>
				<!-- 新規投稿部分（共通テンプレ？） -->
				<%= render 'books/newform', book: @book %>
			</div>

			<!-- ログインユーザーの投稿一覧 -->

			<div class="col-xs-9">
				<h2>Books</h2>

				<table class="table table-hover table-inverse">
					
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<!-- 繰り返し処理 -->
					<% @books.each do |book| %>
						<tbody>
							<tr>
								<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>  </td>
								
								<td><%= link_to book.title, book_path(book) %></td> 
								
								<td><%= book.body %></td>
							</tr>
						</tbody>
					<% end %>
				</table>
				
			</div>
			
		</div>
		
	</div>
	
</div>
<!--books一覧 -->

